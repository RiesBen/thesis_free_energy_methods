mkdir -p ref
cd ref
cp ~/lars/svn/SCRIPTS/lars_to_bib .
cp ~/lars/svn/SCRIPTS/lars_to_bib.awk .
cp ~/lars/svn/lars.txt .

# with codes
#echo 'y' | ./lars_to_bib -f mol_simul_title -c yes -s yes lars.txt ../paper.tex ../paper.lrs >& /dev/null
# no codes
echo 'y' | ../../lars_to_bib -f mol_simul_title -c no -s yes lars.txt ../manuscript.tex ../inc/paper.lrs >& /dev/null
cd ../

cat paper.lrs | sed '\
s/pp. XXX-XXX./in press./g;\
s/ Available at: {\\em }//g\
0,/^% SUP_MAT reference not found.*$/s/^% SUP_MAT reference not found.*$/\\bibitem{SUP_MAT} Supporting Information document/g; \
' > tmplrs
mv tmplrs paper.lrs

pdflatex content
pdflatex content
